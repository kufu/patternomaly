{
  "name": "@smarthr/patternomaly",
  "version": "2.0.0",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "description": "Easily generate patterns for use in data graphics",
  "jsnext:main": "dist/patternomaly.mjs",
  "main": "dist/patternomaly.js",
  "typings": "index.d.ts",
  "browser": "dist/patternomaly.js",
  "scripts": {
    "prebuild": "pnpm lint",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "pretest": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm test",
    "lint": "eslint src/ test/",
    "serve": "pnpm build && cp dist/patternomaly.js examples/ && serve examples -p 3000",
    "serve:dev": "pnpm build && cp dist/patternomaly.js examples/ && serve examples -p 3000 --watch"
  },
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "canvas": "^3.0.2",
    "eslint": "^9.35.0",
    "happy-dom": "^18.0.1",
    "rollup": "^4.51.0",
    "serve": "^14.2.5",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kufu/patternomaly.git"
  },
  "keywords": [
    "pattern",
    "canvas",
    "colorblind",
    "data",
    "graphics"
  ],
  "license": "MIT"
}
